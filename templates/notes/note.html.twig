<div class="col-sm-6 col-lg-4 mb-4 note-container">
    <div class="card text-white {{ note.color }}">
        <div class="card-header">
            <h5 class="m-0 fw-bold">{{ note.title }}</h5>
        </div>
        <div class="card-body">
            <p class="card-text">{{ note.text|nl2br }}</p>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-end">
                <button class="btn border-0" title="Edit" data-bs-toggle="modal" data-bs-target="#modal-edit-note" data-action="{{ path('app_get_edit_form', {'id': note.id}) }}">
                    <svg width="24" height="24" viewBox="0 0 24 24" class="icon icon-tabler">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4" />
                        <path d="M13.5 6.5l4 4" />
                    </svg>
                </button>
                <form method="POST">
                    <input type="hidden" name="note_id" value="">
                </form>
                <button class="btn border-0" title="Delete this note" data-bs-toggle="modal" data-bs-target="#modal-delete-note" data-action="{{ path('app_notes_delete', {'id': note.id}) }}">
                    <svg width="24" height="24" viewBox="0 0 24 24" class="icon icon-tabler">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M4 7l16 0" />
                        <path d="M10 11l0 6" />
                        <path d="M14 11l0 6" />
                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>