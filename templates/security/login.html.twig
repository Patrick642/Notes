{% extends 'base.html.twig' %}

{% block title %}
	Sign in - Notes
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-center align-items-center mb-5">
			<a href="{{ path('app_home') }}">
				<img height="75" src="{{ asset('images/logo.svg') }}">
			</a>
		</div>
		<main class="d-flex justify-content-center">
			<div class="card form-card rounded-4">
				<div class="card-body p-3 p-md-4 p-xl-5">
					<div class="col-12 mb-4">
						<h3>Sign in</h3>
					</div>
					<div class="row">
						<p>Don't have an account?
							<a href="{{ path('app_signup') }}">SIGN UP</a>
						</p>
					</div>
					<form method="post">
						<div class="col-12 mb-3">
							<div class="form-floating">
								<input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" placeholder="Email" required autofocus>
								<label for="inputEmail">Email address</label>
							</div>
						</div>
						<div class="col-12 mb-3">
							<div class="form-floating">
								<input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Password" required>
								<label for="inputPassword">Password</label>
							</div>
						</div>
						<div class="col-12 mb-3">
							<div class="form-check">
								<input class="form-check-input" type="checkbox" id="flexCheckDefault" name="_remember_me">
								<label class="form-check-label" for="flexCheckDefault">
									Remember me
								</label>
							</div>
						</div>
						<div class="col-12 mb-3">
							{% if error %}
								<div class="alert border border-danger text-danger" role="alert">
									{{ error.messageKey|trans(error.messageData, 'security') }}
								</div>
							{% endif %}
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div class="col-12 mb-3">
							<button class="form-control btn btn-lg btn-primary" type="submit">
								Sign in
							</button>
						</div>
					</form>
					<p class="mb-0 text-center">
						<a class="text-decoration-underline" data-controller="demo-alert" data-action="click->demo-alert#show">Forgot my password</a>
					</p>
				</div>
			</div>
		</main>
	</div>
{% endblock %}
