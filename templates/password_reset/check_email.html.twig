{% extends 'base.html.twig' %}

{% block title %}Password reset - Notes{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-center align-items-center mb-5">
        <a href="{{ path('app_home') }}">
            <img height="75" src="{{ asset('images/logo.svg') }}">
        </a>
    </div>
    <main class="my-5 d-flex justify-content-center">
        <div class="card form-card rounded-4">
            <div class="card-body p-3 p-md-4 p-xl-5">
                <div class="col-12">
                    <h3>Recovery email sent.</h3>
                    A special link has been sent so that you can set a new password for your account. Please check your mailbox and click on this link.
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}