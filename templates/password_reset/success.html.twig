{% extends 'base.html.twig' %}

{% block title %}
	Password changed - Notes
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-center align-items-center mb-5">
			<a href="{{ path('app_home') }}">
				<img height="75" src="{{ asset('images/logo.svg') }}">
			</a>
		</div>
		<main class="my-5 d-flex justify-content-center">
			<div class="card form-card rounded-4">
				<div class="card-body p-3 p-md-4 p-xl-5">
					<div class="col-12">
						<h3 class="text-center">Password changed!</h3>
						The password has been successfully changed! You can now log in to your account with your new password.
						<div class="text-center mt-3">
							<a href="{{ path('app_login') }}">GO TO LOGIN PAGE</a>
						</div>
					</div>
				</div>
			</div>
		</main>
	</div>
{% endblock %}
