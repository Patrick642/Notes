{% extends 'base.html.twig' %}

{% block title %}Password reset - Notes{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-center align-items-center mb-5">
        <a href="{{ path('app_home') }}">
            <img height="75" src="{{ asset('images/logo.svg') }}">
        </a>
    </div>
    <main class="my-5 d-flex justify-content-center">
        <div class="card form-card rounded-4">
            <div class="card-body p-3 p-md-4 p-xl-5">
                <div class="col-12 mb-4">
                    <h3>Password reset</h3>
                    <p>Enter the email address of your account, a special link will be sent to you and you will be able to set a new password.</p>
                </div>
                {{ form_start(form) }}
                <div class="col-12 mb-3">
                    <div class="form-floating">
                        {{ form_widget(form.email) }}
                        {{ form_label(form.email) }}
                    </div>
                </div>
                {% if not form.vars.valid %}
                <div class="alert border border-danger text-danger" role="alert">
                    {{ form.email.vars.errors[0].message ?? form.vars.errors[0].message }}
                </div>
                {% endif %}
                <div class="col-12 mb-3">
                    <button class="form-control btn btn-lg btn-primary" type="submit">
                        Send
                    </button>
                </div>
                {{ form_end(form) }}
                <div class="col-12 text-center">
                    <a href="{{ path('app_login') }}">BACK</a>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}