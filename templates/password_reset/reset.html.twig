{% extends 'base.html.twig' %}

{% block title %}
	Password reset - Notes
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-center align-items-center mb-5">
			<a href="{{ path('app_home') }}">
				<img height="75" src="{{ asset('images/logo.svg') }}">
			</a>
		</div>
		<main class="my-5 d-flex justify-content-center">
			<div class="card form-card rounded-4">
				<div class="card-body p-3 p-md-4 p-xl-5">
					<div class="col-12 mb-4">
						<h3>Set new password</h3>
						<p>For account
							<b>{{ email }}</b>
						</p>
					</div>
					{{ form_start(form) }}
					<div class="col-12 mb-3">
						<div class="form-floating">
							{{ form_widget(form.password.first) }}
							{{ form_label(form.password.first) }}
						</div>
					</div>
					<div class="col-12 mb-3">
						<div class="form-floating">
							{{ form_widget(form.password.second) }}
							{{ form_label(form.password.second) }}
						</div>
					</div>
					{% if not form.vars.valid %}
						<div class="alert border border-danger text-danger" role="alert">
							{{ form.password.first.vars.errors[0].message }}
						</div>
					{% endif %}
					<div class="col-12">
						<button class="form-control btn btn-lg btn-primary" type="submit">
							Confirm
						</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</main>
	</div>
{% endblock %}
