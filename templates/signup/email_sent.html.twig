{% extends 'base.html.twig' %}

{% block title %}
	Verification email sent - Notes
{% endblock %}

{% block body %}
	{% include 'navbar.html.twig' %}

	<div class="container">
		<main class="d-flex justify-content-center">
			<div class="card form-card rounded-4">
				<div class="card-body p-3 p-md-4 p-xl-5">
					<div class="col-12">
						<h3 class="text-center">Verification email sent.</h3>
						<p>To use the application, you must first verify your email address. A special account activation link has been sent to <b>{{ email }}</b>. Please check your mailbox and click on this link.</p>
						<div class="text-center mt-3">
							<a href="{{ path('app_signup_email_resend') }}">Send verification email again</a>
						</div>
					</div>
				</div>
			</div>
		</main>
	</div>
{% endblock %}
