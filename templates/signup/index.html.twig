{% extends 'base.html.twig' %}

{% block title %}
	Sign up - Notes
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-center align-items-center mb-5">
			<a href="{{ path('app_home') }}">
				<img height="75" src="{{ asset('images/logo.svg') }}">
			</a>
		</div>
		<main class="d-flex justify-content-center">
			<div class="card form-card rounded-4">
				<div class="card-body p-3 p-md-4 p-xl-5">
					<div class="col-12 mb-4">
						<h3>Sign up</h3>
					</div>
					<div class="row">
						<p>Do you already have an account?
							<a href="{{ path('app_login') }}">SIGN IN</a>
						</p>
					</div>
					{{ form_start(form) }}
					<div class="col-12 mb-3">
						<div class="form-floating">
							{{ form_widget(form.email) }}
							{{ form_label(form.email) }}
						</div>
					</div>
					<div class="col-12 mb-3">
						<div class="form-floating">
							{{ form_widget(form.password.first) }}
							{{ form_label(form.password.first) }}
						</div>
					</div>
					<div class="col-12 mb-3">
						<div class="form-floating">
							{{ form_widget(form.password.second) }}
							{{ form_label(form.password.second) }}
						</div>
					</div>
					<div class="col-12 mb-3">
						{% if not form.vars.valid %}
							<div class="alert border border-danger text-danger" role="alert">
								{{ form.email.vars.errors[0].message ?? form.password.first.vars.errors[0].message }}
							</div>
						{% endif %}
					</div>
					<div class="col-12 mb-3">
						<button class="form-control btn btn-lg btn-primary" type="submit">
							Sign up
						</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</main>
	</div>
{% endblock %}
